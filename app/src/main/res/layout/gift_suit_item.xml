<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/item_bg"
    android:layout_marginRight="20dp"
    android:id="@+id/cl">

    <ImageView
        android:id="@+id/iv_gift_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="12dip"
        app:layout_constraintRight_toRightOf="@id/cl"
        app:layout_constraintLeft_toLeftOf="@id/cl"
        app:layout_constraintTop_toTopOf="@id/cl"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="22dp"
        android:layout_height="13dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dip"
        android:layout_marginRight="2dip"
        android:textColor="#FFFFFF"
        android:textSize="9sp"
        android:background="@drawable/text_bg"
        app:layout_constraintRight_toRightOf="@id/cl"
        app:layout_constraintTop_toTopOf="@id/cl"
        android:gravity="center_horizontal"
        tools:text="活动" />

    <LinearLayout
        android:id="@+id/ll_bg"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@drawable/gift_suit_item_bg"
        android:layout_below="@id/iv_gift_image"
        android:layout_marginTop="3dip"
        android:layout_marginBottom="3dip"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/iv_gift_image"
        app:layout_constraintRight_toRightOf="@+id/cl"
        app:layout_constraintLeft_toLeftOf="@+id/cl"
        >

        <TextView
            android:id="@+id/tv_gift_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="礼物一"
            android:textSize="12dip"
            android:textColor="#FFFFFF"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/tv_gift_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#EC3232"
                android:textSize="12dip"
                tools:text="20" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#EC3232"
            android:textSize="12dip"
            tools:text="个" />
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>